{# empty Twig template #}
{% extends 'page.html.twig' %}
{% block body %}
  <section class="section clearfix">
<div class="container">
 <div class="row">
                <div class="col-lg-9">
                <div class="small-gap"></div>
                <h2>Gallery Collection List</h2>
                </div>
                <div class="col-lg-3">
                      <div class="small-gap"></div>
                    <a href="{{ path('cup_site_management_gallery_collection_add') }}" class="btn btn-primary">Add New Collections </a>
                </div>
              </div>  
    
    
    <div class="row">
   <div class="col-lg-12">
    <table class="table table-striped table-responsive">
 

<thead> 
<tr> 
	<th>SR</th> 
	
	<th>Gallery Name</th>

	<th>Thumbnail Image </th>
	
	<th>Banner Image</th>
	
	<th>URL</th>
	
        
</tr> 
</thead> 


<tbody>
    {% for gallery in galleries %} 
<tr> 
	<td>{{ loop.index }}</td> 

	<td>{{ gallery.name }} </td>
	<td>{{ gallery.imagePath }} </td>
	
	<td>{{ gallery.bannerImage}} </td>
	
	<td>{{ gallery.url}} </td>
	
	 
		
	{#}<td> {% if client.active %} yes {% else %} No {% endif %}</td> {#}
	
        <td>
            <a href="{{ path('cup_site_management_gallery_collection_edit', {'id': gallery.id})}}" > Edit </a>
            <a href="{{ path('cup_site_management_gallery_collection_delete', {'id': gallery.id})}}"> Delete </a>
        </td> 
</tr> 
{% endfor %} 
</tbody> 

</table>
</div>
</div>
</div>
</section>

{% endblock %}