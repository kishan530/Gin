{% extends 'page.html.twig' %}
{% block javascripts %}

{% endblock %}
{% block body %}

    <section class="section clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                <div class="small-gap"></div>
                <h2>Invoice List</h2>
                </div>
                <div id="fullwidth" class="col-sm-12">
                    <div class="col-lg-10">
                        <table id="result" class="table table-bordered col-lg-12 col-sm-12">
                           {% if invoiceList|length>0 %}	
                                  <tr class="blue">
                                        <th>Sl.No </th>
                                        <th>Buyer Name</th>
                                        <th>BuyerOrder No</th>
                                        <th>Invoice No</th>                                                                     
                                        <th> - </th> 
                                    </tr>	
                            {% endif %}			

                             {% for invoice in invoiceList if invoiceList|length>0 %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ invoice.buyerName }}</td> 
                                    <td>{{ invoice.buyerOrderNo }}</td> 
                                   <td>{{ invoice.invoiceNo }}</td>                                       
                                    <td><a target="_blank" href="{{ asset('invoice/'~invoice.invoiceNo~'.pdf') }}">view</a></td>

                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>

        </div>
</section>
{% endblock %}