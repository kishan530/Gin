{% extends 'page.html.twig' %}
{% block javascripts %}

<script>

    $("#list").on('click', ".deactivate", function (e) {	
    var formURL = $(this).attr("href");
    var tr = $(this).parent().parent();
    $.ajax(
            {
                url : formURL,
                type: 'GET',
                success:function(data, textStatus, jqXHR)
                {
                    if(data=='true')
                    {
                        tr.remove();
                    }		                        
                },
                error: function(jqXHR, textStatus, errorThrown)
                {
                    alert(textStatus);
                    //if fails
                    alert('Error: ' +  errorThrown);
                }
            });
    e.preventDefault(); //STOP default action
    e.unbind(); //unbind. to stop multiple form submit.
});

</script>

{% endblock %}
{% block body %}

    <section class="section clearfix">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                <div class="small-gap"></div>
                <h2>Location List</h2>
                </div>
                <div class="row">
                 <div class="col-sm-6">
                    {{ form_start(form) }}
                    
                    <div class="row form-group">
                             <div class="col-lg-2">
                            {{ form_label(form.city) }}
                            </div>
                             <div class="col-lg-4">
                                {{ form_widget(form.city) }}
                            </div> 
                            <div class="col-lg-3">
                                {{ form_widget(form.submit,{ 'attr': {'class': 'btn btn-primary pull-right'}}) }}
                            </div> 
                             <div class="col-lg-3">
                                 <a href="{{ path('cup_site_management_campaign_add_location') }}" class="btn btn-primary pull-right">Add New</a>
                                 
                             </div>
                        </div>
                        
                       
                    {{ form_end(form) }}
                </div>
                </div>
                <div id="fullwidth" class="col-sm-12">
                    <div class="col-lg-10">
                        <table id="list" class="table table-bordered col-lg-12 col-sm-12">
                           {% if locations|length>0 %}	
                                  <tr class="blue">
                                        <th>Sl.No </th>
                                        <th>Name</th>
                                        <th></th>                                                                   
                                    </tr>	
                            {% endif %}			

                             {% for location in locations if locations|length>0 %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ location.name }}</td>   
                                    <td> <a href="{{ path('cup_site_management_campaign_edit_location',{ 'id': location.id }) }}" >Edit</a>
                                     <a href="{{ path('cup_site_management_campaign_delete_location',{ 'id': location.id }) }}" class="deactivate" >Delete</a>
                                    </td>                    

                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>

        </div>
</section>
{% endblock %}