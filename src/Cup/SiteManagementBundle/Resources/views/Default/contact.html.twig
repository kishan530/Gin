                                         {{ form_widget(form.numberOfCups, { 'attr': {'class':'make-margin','placeholder':'Number of Cups(in a month)','title':'Please enter a valid Name', 'maxlength':'100'}}) }}
                                         
                                         </div>
                                         
                                          <div class="free-cups-img-toggle" >
								         	 <img alt=""
													src="{{ asset('images/Logo5.png') }}">
								         </div>  
                                         
                                    </div>
                                    
                                    
                                    </div>
                                 
                                 
                                 
                                    <div class="row">
                                         		
      		   <div class="col-md-12 col-sm-12 col-xs-12 contactform ">
                       {{ form_widget(form.message, { 'attr': {'class':'make-margin contactformtextarea contarea','placeholder': 'Enter Your message','title':'Please enter a valid message', }}) }}
                 </div>   
                      <div class="row">
                              <div class="col-md-12" >    	
                                   <div class="row"> 
                                        
                                   <div class="col-md-4 col-sm-4 col-xs-4 ">
                                   
                                  
               <figure><img src="{{ asset('images/homeCups/'~captcha) }}" alt="captcha details" height="60"   style="margin-left:15px;"></figure>
								
								</div>
								
								  <div class="col-md-6 col-sm-6 col-xs-6 " style ="margin-left: -80px;">
