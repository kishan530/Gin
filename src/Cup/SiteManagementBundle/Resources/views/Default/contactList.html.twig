{% extends 'page.html.twig' %}

{% block stylesheets %}
<link defer="defer" href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet">
{% endblock %}
{% block javascripts %}

<script>
$(document).ready(function(){  	

	$('#cup_sitemanagementbundle_contactsearch_from').datepicker().on('changeDate', function(ev) {
        $(this).datepicker("hide");   
	 }).data('datepicker');

	
$('#cup_sitemanagementbundle_contactsearch_to').datepicker().on('changeDate', function(ev) {
$(this).datepicker("hide");   
}).data('datepicker');
	
});
</script>

{% endblock %}


{% block body %}

    <section class="section clearfix">
        <div class="container">
            <div class="row">
            
            
             {{ form_start(form) }}
   {{ form_errors(form) }}
   	
	          
            
            
                <div class="col-lg-12">
                <div class="small-gap"></div>
                <h2>Contact List</h2>
                </div>
                                
                <div class="row">
                
		<div class="col-lg-12">	
			 <div class="col-lg-3 col-sm-3">
			<div class="row form-group {% if form.from.vars.errors|length %}has-error{% endif %}">
                    <div class="col-lg-5">
                            {{ form_label(form.from) }}
                        </div>
                        <div class="col-lg-7">
                        	
                            {{ form_widget(form.from,{ 'attr': {'class': 'form-control date-pick'}} ) }}
                        </div>
                       </div>
                      </div>
                     
			
             <div class="col-lg-3 col-sm-3">
            <div class="row form-group {% if form.to.vars.errors|length %}has-error{% endif %}">
                    <div class="col-lg-5">
                            {{ form_label(form.to) }}
                        </div>
                        <div class="col-lg-7">
                        
                        	{{ form_widget(form.to,{ 'attr': {'class': 'form-control date-pick'}})  }}
                        	
                             </div>
                            </div>
            </div>
                           
                          
				<div class="col-lg-2 col-sm-2">
				{{ form_widget(form.submit,{ 'attr': {'class': 'btn-system'}}) }}
					{{ form_end(form) }}
				</div>
			</div> 					
			
			</div>
                
                
                <div id="fullwidth" class="col-sm-12">
                   {#} <div class="col-lg-10"> {#}
                    <div class="col-lg-12">
                       {#} <table id="result" class="table table-bordered col-lg-12 col-sm-12">{#}
                       <table class="table table-striped  table-bordered tabletest">
                           {% if contacts|length>0 %}	
                                  <tr class="blue">
                                        <th style="width:5%;">Sl.No </th>
                                        <th style="width:10%;">Name</th>
                                        <th style="width:10%;">Mobile</th>
                                        <th style="width:10%;">Email</th>
                                         <th style="width:5%;">City</th>
                                         <th style="width:10%;"># Employees</th>
                                         <th style="width:5%;"># Cups</th>
                                         <th style="width:5%;">Advertisetype</th>  
                                           <th style="width:5%;">Date</th>                                                                
                                        <th> Message </th> 
                                          
                                    </tr>	
                            {% endif %}			

                             {% for contact in contacts if contacts|length>0 %}
                                <tr >
                                    <td style="width:5%;" >{{ loop.index }}</td>
                                    <td style="width:10%;">{{ contact.name }}</td> 
                                    <td style="width:10%;">{{ contact.mobile }}</td> 
                                   <td style="width:10%;">{{ contact.email }}</td>
                                    <td style="width:5%;">{{ contact.city }}</td>
                                     <td style="width:10%;">{{ contact.numberOfEmployees }}</td> 
                                     <td style="width:5%;">{{ contact.numberOfCups }}</td>
                                     
                                   <td style="width:5%;">{{ contact.advertiseType }}</td> 
                                   <td style="width:5%;">{{ contact.date|date("d/m/") }}</td> 
                                                                   
                                    <td >{{ contact.message }}</td>

                                </tr>
                                
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>

        </div>
</section>
{% endblock %}