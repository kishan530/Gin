<div id="contact" class="modal fade" tabindex="-1" data-easein="rotateInDownLeft" data-easeout="rotateOutDownLeft" style="z-index: 10000000;">
    <div class="modal-dialog modal-md">
        <div class="modal-content contentpopup popupmobile">

                <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Contact Us</h4>
      </div>
      <div class="modal-body">
       <div  id="contactForm">
      {{ form_start(form) }}
				                {{ form_errors(form, { 'global_errors': true }) }}
      		<div class="row">
      		
      		<div class="col-md-12 col-sm-12 col-xs-12" id="advertise">
                                {{ form_widget(form.advertiseType) }}
                            </div>  
      		</div>
      		<div class="row">
                  <div class="col-md-7">
						<div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                         {{ form_widget(form.name, { 'attr': {'class':'make-margin','placeholder': 'Enter Your Name','title':'Please enter a valid Name', 'maxlength':'100'}}) }}
                                    </div>
                         </div>
                            <div class="row">
                                     <div class="col-md-12 col-sm-12 col-xs-12">
                                     {{ form_widget(form.mobile, { 'attr': {'class':'make-margin','placeholder': 'Enter Your Mobile No','title':'Please enter a valid Mobile No'}}) }}
                                    </div>
                          </div>
                          <div class="row">
                                 <div class="col-md-12 col-sm-12 col-xs-12">
                                         {{ form_widget(form.email, { 'attr': {'class':'make-margin','placeholder': 'Enter Your Email','title':'Please enter a valid Email', 'maxlength':'100'}}) }}
                                    </div>
                            </div>	
                  </div>
	              <div class="col-md-5">
	              
	              <div class="free-cups-toggle">
	              
				<div class="row">
	               	<div class="col-md-12 col-sm-12 col-xs-12">
	                			{{ form_widget(form.city, { 'attr': {'class':'make-margin','placeholder':'City','title':'Please enter a valid Name', 'maxlength':'100'}}) }}
	                 </div>
                 </div>
	              <div class="row"> 
	                <div class="col-md-12 col-sm-12 col-xs-12">
                 			 {{ form_widget(form.numberOfEmployees, { 'attr': {'class':'make-margin','placeholder':'No of Employees','title':'Please enter a valid Name', 'maxlength':'100'}}) }}
                     </div>
                   </div>
                   
                 <div class="row">
                 <div class="col-md-12 col-sm-12 col-xs-12">
                           {{ form_widget(form.numberOfCups, { 'attr': {'class':'make-margin','placeholder':'No of Cups(in a month)','title':'Please enter a valid Name', 'maxlength':'100'}}) }}
                 </div>
                 </div>
                 
	         	 </div>   
	         	 <div class="free-cups-img-toggle">
	         	 <img alt=""
						src="{{ asset('images/Logo5.png') }}">
	         	 </div>       
	             
              </div>
              <div class="row">
                  <div class="col-md-12">
                                    
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                    {{ form_widget(form.message, { 'attr': {'class':'make-margin','placeholder': 'Enter Your message','title':'Please enter a valid message', 'maxlength':'5000'}}) }}                                                                                                                                                                                               				              
                                    
                                    </div>
                                    
                                     <div class="col-md-12 col-sm-12 col-xs-12" id = "advertise">
                                {{ form_widget(form.advertiseType) }}
                            </div>  
                         </div>
                         <div class="row">
                         <div class="col-md-12">
                         <div class="col-md-4 col-sm-4 col-xs-4 captchaclass">
               <figure><img src="{{ asset('images/homeCups/add_captcha.jpg') }}" alt="captcha details" height="50" style=" margin-left: 12px"></figure>
					</div>
					
					<div class="col-md-6 col-sm-6 col-xs-6 captchaclass captchamargin">
				{{ form_widget(form.answer, { 'attr': {'class':'make-margin captchaform','placeholder':'Your answer','title':'Your answer here?', 'maxlength':'100'  }} ) }}
            		</div>
                                              
                     
                      
                      <div class="col-md-2 col-sm-2 col-xs-2 captchaclass captchaclassbutton ">
                     <div class="make-margin"></div>
                                   <div class="col-md-12 col-sm-12 col-xs-12" style ="margin-bottom: 2%;">
                            {{ form_widget(form.submit,{ 'attr': {'class': 'pull-right btn btn-danger btn-lg border-radius popupsubmit'}}) }}
                                </div>
                        </div> </div> 
                     </div>
             </div>   
             
               {{ form_end(form) }}   
               </div> 
